<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Ustawienia polaczenia z baza danych -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/twitter2</property>
        <property name="connection.username">root</property>
        <property name="connection.password">1234</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- Wyswietlaj w konsoli wszystkie kody SQL - bezcenne przy debugowaniu -->
        <property name="show_sql">true</property>
        <!-- Przy starcie aplikacji usun istniejaca baze i utworz ja od nowa -->
        <!--<property name="hibernate.hbm2ddl.auto">update</property>-->
        <!-- Klasy mapowane -->
        <mapping class="sda.twitter2.models.User"/>
        <mapping class="sda.twitter2.models.Follower"/>
        <mapping class="sda.twitter2.models.Like"/>
        <mapping class="sda.twitter2.models.Response"/>
        <mapping class="sda.twitter2.models.Tweet"/>

    </session-factory>
</hibernate-configuration>